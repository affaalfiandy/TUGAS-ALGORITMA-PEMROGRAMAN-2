<MyGrid>
    canvas.before:
        Color:
            rgba:(11/255,32/255,39/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    name: 'first'
    subjek: subjek
    verb: verb
    objek: objek 
    BoxLayout:
        orientation: "vertical"
        size: root.width , root.height
        cols : 1
        padding: 50
        spacing: 20
        GridLayout:
            cols:1
            Label:
                text:"INGLISH"
                font_size: '30'
        GridLayout:
            color: (255,255,255,1)
            row_default_height : 30
            cols : 1
            spacing:10
            canvas.before:
                Color:
                    rgba: (64/255,121/255,140/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            TextInput:
                size_hint_y: None
                height:40
                pos_hint : {"center_x":0.5}
                background_normal:""
                background_color:(0,0,0,0)
                id : subjek
                text: "SUBJECT"
                color: (255,255,255,1)
                multiline : False
        GridLayout:
            size: root.width , root.height
            cols : 1
            spacing:10
            canvas.before:
                Color:
                    rgba: (64/255,121/255,140/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            TextInput:
                size_hint_y: None
                height:40
                pos_hint : {"center_x":0.5}
                background_normal:""
                background_color:(0,0,0,0)
                id : verb
                text: "VERB"
                color:(255,255,255,1)
                multiline : False
        GridLayout:
            size: root.width , root.height
            cols : 1
            spacing:10
            canvas.before:
                Color:
                    rgba: (64/255,121/255,140/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            TextInput:
                size_hint_y: None
                height:40
                pos_hint : {"center_x":0.5}
                text: "OBJECT"
                background_normal:""
                background_color:(0,0,0,0)
                id: objek
                color:(207/255,215/255,199/255,1)
                multiline : False
        GridLayout:
            size: root.width , root.height
            #pos_hint : {"center_x":0.5}
            cols : 1
            spacing: 100
            padding: 20
            Button:
                #size_hint: 0.2,0.1
                size_hint_y: None
                height:40
                pos_hint : {"center_x":0.5}
                text : 'PILIH'
                color : (11/255,32/255,39/255,1)
                font_size:'15'
                on_press: root.btn_pilih()
                on_release: 
                    app.root.current = 'second'
                    root.manager.transition.direction = "left"                        
                background_normal:""
                background_color:(0,0,0,0)
                canvas.before:
                    Color:
                        rgba: (207/255,215/255,199/255,1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10]

